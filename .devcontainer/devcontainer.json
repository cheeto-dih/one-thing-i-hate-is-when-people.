{
    "name": "Proxy Browser Environment",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "customizations": {
        "vscode": {
            "settings": {
                // Tells VS Code to look for the PAC file
                "http.proxy": "http://your-proxy-address:port", 
                "http.proxyStrictSSL": false,
                "http.proxySupport": "on"
            },
            "extensions": [
                "ms-vscode.live-server" 
            ]
        }
    },
    "containerEnv": {
        // Some tools look for this specific env var for PAC files
        "HTTPS_PROXY_PAC_URL": "file:///workspaces/${localWorkspaceFolderBasename}/proxy.pac"
    }
}
